<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="com.capstone.nik.mixology">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
    android:name="com.capstone.nik.mixology.Network.MyApplication"
    android:allowBackup="true"
    android:fullBackupContent="@xml/backup_descriptor"
    android:icon="@drawable/wine2"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme"
    tools:ignore="InnerclassSeparator">

    <activity
      android:name="com.capstone.nik.mixology.Activities.ActivityMain"
      android:label="@string/app_name"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>

    </activity>
    <activity
      android:name="com.capstone.nik.mixology.Activities.ActivityDetails"
      android:label="@string/title_activity_details"
      android:parentActivityName="com.capstone.nik.mixology.Activities.ActivityMain"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme.NoActionBar">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="com.capstone.nik.mixology.Activities.ActivityMain" />
    </activity>

    <provider
      android:name=".data.generated.DrinkProvider"
      android:authorities="com.example.nik.mixology.data.DrinkProvider"
      android:exported="false" />

    <activity
      android:name="com.capstone.nik.mixology.Activities.ActivitySearch"
      android:label="@string/title_activity_search"
      android:parentActivityName="com.capstone.nik.mixology.Activities.ActivityMain"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme.NoActionBar">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="com.capstone.nik.mixology.Activities.ActivityMain" />
    </activity>

    <receiver
      android:name="com.capstone.nik.mixology.Widget.DrinkWidgetProvider"
      android:label="@string/widget_name">
      <intent-filter>
        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
        <action android:name="com.example.nik.mixology.utils.ACTION_DATA_UPDATED" />
      </intent-filter>
      <meta-data
        android:name="android.appwidget.provider"
        android:resource="@xml/cocktail_app_widget_info" />
    </receiver>

    <service
      android:name="com.capstone.nik.mixology.Widget.DrinkWidgetService"
      android:exported="false"
      android:permission="android.permission.BIND_REMOTEVIEWS" />

    <meta-data
      android:name="io.fabric.ApiKey"
      android:value="716de6caed709cd5d2cded23c88864657c5f4187" />
  </application>
</manifest>